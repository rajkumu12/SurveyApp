<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    tools:context=".Ui.Activity.WorkerIdCardActivity">



    <RelativeLayout
        android:id="@+id/rly_topactionbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/back1"
            android:layout_width="21dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"

            android:src="@drawable/backbtn" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/dp21"
                android:layout_centerInParent="true"
                android:fontFamily="@font/quicksand_bold"
                android:text="Worker ID Card"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rly_topactionbar1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp378"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp60"
        android:background="@drawable/home_fragbg"
        android:layout_marginHorizontal="@dimen/dp16"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lly_create"
            android:layout_width="225dp"
            android:layout_height="89dp"
            android:background="@drawable/workerid_card_bg"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp12"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:gravity="center"
                android:fontFamily="@font/quicksand_medium"
                android:text="Create\n
Worker ID Card"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_view"
            android:layout_width="225dp"
            android:layout_height="89dp"
            android:background="@drawable/report_home_orange_"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp36"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp12"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sp16"
                android:fontFamily="@font/quicksand_medium"
                android:text="View\n
Worker ID Card"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>